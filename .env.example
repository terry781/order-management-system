# Order Management System - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3001)
PORT=3001

# Server host (default: localhost)
HOST=localhost

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path (relative to backend directory)
DATABASE_PATH=./data/orders.db

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CORS origin for frontend (default: http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
LOGGING_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window per IP (default: 100)
RATE_LIMIT_MAX=100

# =============================================================================
# FRONTEND CONFIGURATION (Optional)
# =============================================================================

# API URL for frontend proxy (default: http://localhost:3001)
VITE_API_URL=http://localhost:3001

# App version for frontend (default: 1.0.0)
VITE_APP_VERSION=1.0.0
